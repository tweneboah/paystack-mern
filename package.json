  "bugs": {
    "url": "https://github.com/tweneboah/paystack-mern/issues"
  },
  "homepage": "https://github.com/tweneboah/paystack-mern#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.11"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
